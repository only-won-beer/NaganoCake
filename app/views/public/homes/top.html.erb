<div class="">
  <div class="text-center new">
   <i class="fas fa-coffee"></i><h4 class="mx-2" style="display:inline "> New Item</h4><i class="fas fa-coffee"></i>
  </div>
  <div class="new_item">
    <% @newitems.each do |item| %>
      <div class="tag">
        <%= link_to item_path(item) do %>
        <div class="huti1">
        <div class="huti2">
        <div class="huti3">
        <div class="huti4">
          <%=image_tag item.get_image(180,180) %>
        </div>
        </div>
        </div>
        </div>
        <% end %>
        <div class="batman d-flex align-items-center">
        <div class="bat">
          <%= item.name %><br>
          <p>¥<%= (item.price * 1.1).floor.to_s(:delimited) %>(税込み)</p>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  <p class="text-right"><%= link_to "全ての商品を見る>", items_path, class: 'btn' %></p>
</div>