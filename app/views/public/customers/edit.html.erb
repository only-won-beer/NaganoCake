<div class="container">
  <h2>会員情報編集</h2>
  <div class="row">


    <%= form_with model: @customer, url: customer_e_path, method: :patch, local: true do |f| %>

      <table class="table">

      <div class="field">
        <tr>
          <th>名前</th>
          <td>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th>フリガナ</th>
          <td>
            <%= f.label :（セイ）, class: "form-label" %>
            <%= f.text_field :last_name_kana %>
            <%= f.label :（メイ）, class: "form-label" %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :郵便番号（ハイフンなし）, class: "form-label" %></th>
          <td><%= f.text_field :postcode %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :住所, class: "form-label" %></th>
          <td><%= f.text_field :address %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :電話番号, class: "form-label" %></th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :メールアドレス, class: "form-label" %></th>
          <td><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
      </div>


      <tr>
      <div class="actions">
        <th></th>
        <td><%= f.submit "編集内容を保存", class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to "退会する", customers_quit_path, class: 'btn btn-sm btn-primary' %></td>
      </div>
      </tr>
      </table>
    <% end %>





  </div>
</div>
