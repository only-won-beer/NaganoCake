<div class="container">
  <h4>マイページ</h4>
  <h4>登録情報</h4>
    <%= link_to "編集する", customer_edit_path, class: 'btn btn-sm btn-success' %>
  <div class="row">
    <div>
      <table class="table">
        <tr>
          <th>氏名</th>
          <td>
            <%= current_customer.last_name %>
            <%= current_customer.first_name %>
          </td>
        </tr>
        <tr>
          <th>カナ</th>
          <td>
            <%= current_customer.last_name_kana %>
            <%= current_customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>レビュー表示名</th>
          <td>
            <%= current_customer.nick_name %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td>
            <%= current_customer.postcode %>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <%= current_customer.address %>
          </td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td>
            <%= current_customer.phone_number %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= current_customer.email %>
          </td>
        </tr>
      </table>
      <h4>配送先</h4>
      <%= link_to "一覧を見る", deliveries_path, class: "btn btn-sm btn-primary" %>
      <h4>注文履歴</h4>
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>
