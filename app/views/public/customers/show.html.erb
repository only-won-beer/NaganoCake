<div class="mx-5 px-5">
  <div class="row mx-5 px-5">
  <h4>MY PAGE</h4>
  </div>
  <div class="row mx-5 px-5">

      <table class="table border-bottom table-background col-md-8">
        <tr>
          <th>氏名</th>
          <td>
            <%= current_customer.last_name %>
            <%= current_customer.first_name %>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <%= current_customer.last_name_kana %>
            <%= current_customer.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>レビュー表示名</th>
          <td>
            <%= current_customer.nick_name %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td>
            <%= current_customer.postcode %>
          </td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <%= current_customer.address %>
          </td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td>
            <%= current_customer.phone_number %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= current_customer.email %>
          </td>
        </tr>
      </table>
      <div class="col-md-4 text-center">
      <%= link_to "配送先一覧を見る", deliveries_path, class: "btn btn-sm btn btn-primary md-3" %><br>
      <br>
      <%= link_to "注文履歴一覧を見る", orders_path, class: 'btn btn-sm btn-info mr-3' %><br>
      <br>
      <%= link_to "会員情報を編集する", edit_customers_path, class: 'btn btn-sm btn-success' %>
      </div>
    </div>
</div>
