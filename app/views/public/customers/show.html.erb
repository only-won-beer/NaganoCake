<div class="container">
  <h3>MY PAGE</h3>


 <div class="justify-content-center row">
    <div class="">
      <table class="table table-bordered table-background text-right" style="width: 600px">
        <thead class="thead-dark col-lg-4">
          <tr>
            <th>名前</th>
            <td class="bg-light col-lg-8">
              <%= current_customer.last_name %>
              <%= current_customer.first_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td class="bg-light">
              <%= current_customer.last_name_kana %>
              <%= current_customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>レビュー表示名</th>
            <td class="bg-light">
              <%= current_customer.nick_name %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td class="bg-light">
              <%= current_customer.postcode %>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td class="bg-light">
              <%= current_customer.address %>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td class="bg-light">
              <%= current_customer.phone_number %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="bg-light">
              <%= current_customer.email %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <div class="text-center">
   <%= link_to "会員情報を編集する", edit_customers_path, class: 'btn btn-sm btn-success col-lg-5' %>
  </div>

  <div class="text-center mt-3">
    <strong><i class="fas fa-truck"></i><%= link_to "配送先一覧を見る", deliveries_path, class: "btn  mr-5", style: 'color:white;' %></strong>
    <strong><i class="fas fa-history"></i><%= link_to "注文履歴一覧を見る", orders_path, class: 'btn', style: 'color:white;' %></strong>
  </div>