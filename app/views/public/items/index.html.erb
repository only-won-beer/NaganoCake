<div class="container">

  <div class="row pt-3 border-bottom">
    <div class="col-lg-2 ml-4">
      <strong>ジャンル検索</strong>
    </div>
    <% @genres.each do |genre| %>
      <p class="pr-4">
        <%= link_to genre.name, items_path(genre_id: genre.id), class:  "text-decoration-none" %><br>
      </p>
    <% end %>
  </div>

  <div class="row pt-3 offset-1">
    <h3>
      <% if @genre.present? %>
        <%= @genre.name %>
      <% else %>
        商品一覧
      <% end %>
      (全<%= @items.count %>件)
    </h3>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col mt-1 ml-6">
        <div class="new_item">
          <div class="tag">
            <%= link_to item_path(item.id),class: "text-decoration-none" do %>
              <div class="huti1">
              <div class="huti2">
              <div class="huti3">
              <div class="huti4">
              <%= image_tag item.get_image(200, 150) %>
              </div>
              </div>
              </div>
              </div>
            <% end %>
            <div class="bat-index text-center">
              <p><%= item.name %></p>
              <p>￥<%= (item.price * 1.1).floor.to_s(:delimited) %>(税込み)</p>
              <div class="favorite-btn_<%= item.id %>">
                <%= render 'public/favorites/favorite', item: item %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

