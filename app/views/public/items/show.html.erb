<div class="row">
  
  <div class="col-2 mt-3 pt-3">
    <p>ジャンル検索</p>
    <% @genres.each do |genre| %>
      <div class="my-4">
        <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-decoration-none" %><br>
      </div>
    <% end %>
  </div>
  
  <div class="col-8 ml-9 mt-3">
    <div class="huti1">
    <div class="huti2">
    <div class="huti3">
    <div class="huti4">
      <%= image_tag @item.get_image(480, 370) %>
    </div>
    </div>
    </div>
    </div>
    
    <div class="bat-show">
      <div class="my-4 ml-3">
        <h3><%= @item.name %></h3>
        <%= @item.description %>
      </div>
      
      <div class="ml-3">
        <p><span class="font-weight-bold">￥<%= (@item.price * 1.1).floor %>(税込み)</span></p>
        <div class="favorite-btn_<%= @item.id %>"><%= render 'public/favorites/favorite', item: @item %></div>
      </div>
      
    </div>

    <%= form_with model:@cart_item, url: '/cart_items/', method: :post, local:true do |f| %>
      <div class="d-flex align-items-end mt-3">
        <div class="form-group">
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :quantity, *[1..10] %>
        </div>

        <div class="form-group offset-1">
          <%= f.submit "カートに入れる", class: 'btn btn-success' %>
        </div>
        
      </div>
    <% end %>
    
      
   
    
  </div>
</div>

<div class="row mt-4">
  <div class="col-3">
    <%= render 'public/reviews/form', item: @item,review: @review %>
  </div>
  <div class="col-9 ml-6 text-senter">
    <div class="review_index_<%= @item.id %>">
      <%= render 'public/reviews/reviews_index', item: @item %>
    </div>
  </div>
</div>