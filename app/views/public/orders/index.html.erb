
  <table>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at.strftime('%Y/%m/%d') %><br>
          <%= order.created_at.strftime('%H:%M') %>
        </td>
        <td>
          <%= order.postcode %><br>
          <%= order.address %><br>
          <%= order.address_name %>
        </td>
        <td>
          <% order.items.each do |item| %>
            <%= item.name %><br>
          <% end %>
        </td>
        <td><%= order.total_pay %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to "表示する", order_path(order) %></td>
      </tr>
    <% end %>
  </table>
      