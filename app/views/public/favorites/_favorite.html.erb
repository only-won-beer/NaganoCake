<% if item.favorited_by?(current_customer) %>
  <%= link_to item_favorites_path(item), class: 'text-danger',method: :delete, remote: true do %>
    ♥<%= item.favorites.count %>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item), method: :post, remote: true do %>
    ♡<%= item.favorites.count %>
  <% end %>
<% end %>