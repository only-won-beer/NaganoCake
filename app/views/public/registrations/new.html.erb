<div class="container">
  <h2>新規会員登録</h2>
  <div class="row">


    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table>

      <div class="field">
        <tr>
          <th>名前</th>
          <td>
            <%= f.label :（姓）　, class: "form-label" %>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.label :（名）, class: "form-label" %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th>フリガナ</th>
          <td>
            <%= f.label :（セイ）, class: "form-label" %>
            <%= f.text_field :last_name_kana %>
            <%= f.label :（メイ）, class: "form-label" %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :メールアドレス, class: "form-label" %></th>
          <td><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :郵便番号（ハイフンなし）, class: "form-label" %></th>
          <td><%= f.text_field :postcode %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :住所, class: "form-label" %></th>
          <td><%= f.text_field :address %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :電話番号, class: "form-label" %></th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th>
            <%= f.label :パスワード, class: "form-label" %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %>文字以上)
            <% end %>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
      </div>

      <div class="field">
        <tr>
          <th><%= f.label :パスワード（確認用）, class: "form-label" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </div>



      <tr>
      <div class="actions">
        <th></th>
        <td><%= f.submit "新規会員登録", class: 'btn btn-sm btn-success' %></td>
      </div>
      </tr>
      </table>
    <% end %>



  </div>

  　　<div class="field">
  　　  <h4>既に登録済みの方</h4>
        <%= render "public/shared/links" %>
      </div>
</div>