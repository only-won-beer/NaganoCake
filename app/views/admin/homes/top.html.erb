<div class="container">
  <h4>注文履歴一覧</h4>
  <!--増やすボタン足す-->
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <%= link_to admin_order_detail_path do %>
            <td><%= order.created_at %></td>
          <% end %>
          <td><%= order.customer.full_name %></td>
          <td><%= order.customer.count %></td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <!--ページネーション入れる-->
  </div>
</div>