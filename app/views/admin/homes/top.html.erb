<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row">
     <% @orders.each do |order| %>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>

        <tr>
          <td>
            <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime('%Y/%m/%d'+' '+'%H:%M') %>
            <% end %>
          </td>
          <td><%= order.customer.full_name %></td>
          <!--注文された全ての商品個数-->
          <td><%= order.order_details.inject(0) { |sum, order_detail| sum + order_detail.quantity } %></td>
          <td><%= order.status_i18n %></td>
        </tr>

      </tbody>
    </table>
    <% end %>
    <!--ページネーション-->
    <div class="mx-auto">
      <%= paginate @orders %>
    </div>
  </div>
</div>