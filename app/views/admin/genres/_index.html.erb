<h4 class="mini-title">ジャンル一覧</h4>
<table class="table table-hover table-inverse">
  <th>ジャンル名</th>
  <th>商品数</th>
  <th></th>
  <% genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.items.count %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>
  <% end %>
</table>