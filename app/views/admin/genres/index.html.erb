
<containar>
  <div class="row justify-content-center">
    <div class="col-md-10 offset-md-2">
      <h4>ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        ジャンル名
        <%= f.text_field :name %>

        <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-10 offset-md-2">
      <table>
        <th>ジャンル</th><th></th>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</containar>

