<div class="container">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
  <div class="row">
    <table>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @custmer %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <% if @customer.is_deleted == true %>
          <td>退会</td>
        <% else %>
          <td>有効</td>
        <% end %>
      </tr>
      <tr>
        <td><%= link_to "編集する", edit_admin_customer_path(@customer) %></td>
        <td><%= link_to "注文履歴一覧を見る", admin_path %></td>
      </tr>
    </table>
  </div>
</div>