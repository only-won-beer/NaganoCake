<div class="container">
  <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
  <div class="row mx-5">
    <table class="table mx-5 table-bordered" style="width:90%; margin:auto;">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <% if @customer.is_deleted == true %>
          <td>退会</td>
        <% else %>
          <td>有効</td>
        <% end %>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success mr-3" %>
          <%= link_to "#{@customer.full_name}さんの注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
        </td>
      </tr>
    </table>
  </div>
</div>