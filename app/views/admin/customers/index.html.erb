<div class="container">
  <div class="row">
    <h2>会員一覧</h2>
    <table class="table border-bottom table-hover table-background">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to customer.last_name, admin_customer_path(customer) %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == true %>
              <td>退会</td>
            <% else %>
              <td>有効</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
