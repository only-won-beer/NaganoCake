<containar>
  <div class="row justify-content-center mt-5">
    <div class="col-auto">
      <h4 class="mini-title">商品編集</h4>
        <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :image,"商品画像" %>
            <%= f.file_field :image, class: "form-inline", accept: "image/*" %>
          </div>

          <div class="form-group">
            <%= f.label :name,"商品名" %>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <%= f.label :description,"商品説明" %>
            <%= f.text_area :description, size: "60x10" %>
          </div>

          <div class="form-group">
            <%= f.label :genre_id,"ジャンル" %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
          </div>

          <div class="form-group">
            <%= f.label :proce,"税抜き価格" %>
            <%= f.text_field :price %>円
          </div>

          <div class="form-group">
            <%= f.label :is_active,"販売ステータス" %>
            <span>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, '販売中', value: true %>
            </span>
            <span>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, '販売停止中', value: false %>
            </span>
          </div>
          <div class="col-6 mx-auto">
            <%= f.submit '登録',class:"btn btn-btn btn-success btn-block" %>
          </div>
        <% end %>
    </div>
  </div><br><br>
  <div class="row justify-content-center"><%= link_to "戻る", admin_items_path %></div>
</containar>