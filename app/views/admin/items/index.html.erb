<containar>

  <div class="col-7 mt-5">
    <h4 class="mini-title">商品一覧</h4>
    <table class="table table-hover table-inverse">
      <th>商品ID</th>
      <th>商品画像</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th></th>

      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= image_tag item.get_image(100,100) %></td>
          <td><%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %></td>
          <td><%= item.price %></td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
            <% if item.is_active == true %>
              販売中
            <% else %>
              販売停止
            <% end %>
          </td>
          <td><%= link_to "編集する", edit_admin_item_path(item) %></td>
          </tr>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center mt-5">
    <%= link_to "商品登録", new_admin_item_path %>
  </div>

</containar>
