<containar>
<div class="row">
  <!--<= render 'layouts/errors', obj: @item %>-->
  <!--<= render 'layouts/errors', obj: @genre %>-->
</div>


<div class="row">
  <div class="col-3 mt-5 offset-1 mr-1">
    <h4 class="mini-title">商品新規登録</h3>
    <%= render 'admin/items/form', item: @item %><br><br>
    <h4 class="mini-title">ジャンル追加</h3>
    <%= render 'admin/genres/form', genre: @genre %><br><br>
    <%= render 'admin/genres/index', genres: @genres %>
  </div>

  <div class="col-7 mt-5">
  <h4 class="mini-title">商品一覧</h4>
  <table class="table table-hover table-inverse">
    <th>商品ID</th>
    <th>商品画像</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
    <th></th>

    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= image_tag item.get_image(100,100) %></td>
        <td><%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %></td>
        <td><%= item.price %></td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <% if item.is_active == true %>
            販売中
          <% else %>
            販売停止
          <% end %>
        </td>
        <td><%= link_to "編集する", edit_admin_item_path(item) %></td>
        </tr>
    <% end %>
  </table>
</div>
</containar>
