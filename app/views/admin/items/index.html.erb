<containar>
  <div class="row">
    <div class="col-8 offset-1 mt-5 mb-3">
      <h4 class="mini-title">商品一覧</h4>
    </div>
    <div class="col-8 offset-1">
      <table class="table table-hover table-inverse">
        <th>商品ID</th>
        <th>商品画像</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th></th>

        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= image_tag item.get_image(200,200) %></td>
            <td><%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %></td>
            <td><%= item.price %></td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.is_active == true %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-danger">販売停止</spn>
              <% end %>
            </td>
            <td><%= link_to "編集する", edit_admin_item_path(item) %></td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= link_to "商品登録", new_admin_item_path,class:"btn btn-btn btn-success btn-lg" %>
  </div>
</containar>
