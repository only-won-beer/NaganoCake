
<containar>
  <div class="row justify-content-center">
    <h4>商品詳細</h4>
  </div>
    <div class="row justify-content-center">
      <div class="col-md-3"></div>
      <div class="col-md-2">
        <%= image_tag @item.get_image(200, 200) %>
      </div>
      <div class="col-md-1"></div>
      <div class="col-md-4">
        <table>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.description %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込み価格</th>
            <td><%= (@item.price * 1.1).floor %>円</td>
          </tr>
          <tr>
            <th>（税抜価格）</th>
            <td>（<%= @item.price %>円）</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <% if @item.is_active == true %>
              <td>販売中</td>
            <% else %>
              <td>販売停止</td>
            <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div class="col-md-2"></div>
    </div>

    <div class="row justify-content-center">
      <%= link_to "編集する", edit_admin_item_path(@item) %>
    </div>
</containar>

