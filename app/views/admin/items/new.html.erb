  <containar>
    <div class="row mt-5">
      <div class="col-7 align-self-center mt-5 offset-4">
        <h4 class="mini-title">商品登録</h4><br>


        <%= form_with model: @item, url: admin_items_path, method: :posts do |f| %>
          <div class="form-group">
            <%= f.label :image,"商品画像" %>
            <%= f.file_field :image, class: "form-inline", accept: "image/*" %>
          </div>

          <div class="form-group">
            <%= f.label :name,"商品名" %>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <%= f.label :description,"商品説明" %>
            <%= f.text_area :description, size: "60x10" %>
          </div>

          <div class="form-group">
            <%= f.label :genre_id,"ジャンル" %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
          </div>

          <div class="form-group">
            <%= f.label :proce,"税抜き価格" %>
            <%= f.text_field :price %>円
          </div>

          <div class="form-group">
            <%= f.label :is_active,"販売ステータス" %>
            <span>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, '販売中', value: true %>
            </span>
            <span>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, '販売停止中', value: false %>
            </span>
          </div>
          <div class="col-12 mx-auto">
            <%= f.submit '新規登録',class:"btn btn-btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </containar>

